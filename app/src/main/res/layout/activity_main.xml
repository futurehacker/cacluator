<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hyungjun.myapplication.MainActivity">

    <TextView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="Nothing"
        android:textSize="50dp"
        android:gravity =  "right|bottom"
        android:id="@+id/a"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text = "1"
            android:textSize = "30dp"
            android:id="@+id/num1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text = "2"
            android:textSize = "30dp"
            android:id="@+id/num2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text = "3"
            android:textSize = "30dp"
            android:id="@+id/num3"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text = "x"
            android:textSize = "30dp"
            android:id="@+id/opmulti"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text = "4"
            android:textSize = "30dp"
            android:id="@+id/num4"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text = "5"
            android:textSize = "30dp"
            android:id="@+id/num5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text = "6"
            android:textSize = "30dp"
            android:id="@+id/num6"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text = "รท"
            android:textSize= "30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text = "7"
            android:textSize="30dp"
            android:id="@+id/num7"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text = "8"
            android:textSize="30dp"
            android:id="@+id/num8"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text = "9"
            android:textSize="30dp"
            android:id="@+id/num9"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text = "C"
            android:textSize = "30dp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:text = "0"
            android:id="@+id/num0"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text = "+"
            android:textSize="30dp"
            android:id="@+id/opplus"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text = "-"
            android:textSize="30dp"
            android:id="@+id/opsub"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text = "="
            android:textSize="30dp"
            android:id="@+id/result"/>
    </LinearLayout>
</LinearLayout>
